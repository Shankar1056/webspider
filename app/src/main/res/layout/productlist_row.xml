<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">
            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/margin_40"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="bottom|right"
                    android:paddingBottom="@dimen/margin_5"
                    android:background="#766242"
                    android:alpha="0.6"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/margin_18"
                        android:layout_height="@dimen/margin_18"
                        android:background="@mipmap/rate_y"/>
                    <ImageView
                        android:layout_width="@dimen/margin_18"
                        android:layout_height="@dimen/margin_18"
                        android:background="@mipmap/rate_y"/>
                    <ImageView
                        android:layout_width="@dimen/margin_18"
                        android:layout_height="@dimen/margin_18"
                        android:background="@mipmap/rate_y"/>
                    <ImageView
                        android:layout_width="@dimen/margin_18"
                        android:layout_height="@dimen/margin_18"
                        android:background="@mipmap/rate_y"/>
                    <ImageView
                        android:layout_width="@dimen/margin_18"
                        android:layout_height="@dimen/margin_18"
                        android:background="@mipmap/rate_y"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/vendorname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Musafir Bazar"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/lightblack"
                        android:textSize="@dimen/text_15"/>

                    <TextView
                        android:id="@+id/vendorlocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_2"
                        android:textSize="@dimen/text_12"
                        android:text="Koderma, Dardaii"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:gravity="center">
                    <RelativeLayout
                        android:id="@+id/calllayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rect_box_blue"
                        android:paddingTop="@dimen/margin_7"
                        android:paddingBottom="@dimen/margin_7"
                        android:paddingLeft="@dimen/margin_10"
                        android:paddingRight="@dimen/margin_12"
                       >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/call"
                            android:textColor="@color/white"
                            android:id="@+id/textView2"
                            android:layout_marginRight="@dimen/margin_7"
                            android:layout_marginLeft="@dimen/margin_5"
                             android:layout_toRightOf="@+id/imageView2"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/call"
                            android:id="@+id/imageView2"
                            android:visibility="visible"
                            android:layout_marginLeft="@dimen/margin_5"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>